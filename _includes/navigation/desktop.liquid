<nav class="pointer-events-auto hidden md:block">
  <ul class="flex rounded-full bg-white/90 px-3 text-sm font-medium text-gray-800 shadow-lg shadow-gray-800/5 ring-1 ring-gray-900/5 backdrop-blur">
    {% for link in site.data.navigation_links %}
      {% capture href %}
        {% if link.path %}
          {% link {{ link.path }} %}
        {% else %}
          {{ link.href }}
        {% endif %}
      {% endcapture %}
      {% assign href = href | strip %}

      <li>
        <a href="{{ href }}" class="relative block px-3 py-2.5 transition {% if href == page.url %} text-primary-700 {% else %} hover:text-primary-700 {% endif %}">
          {{ link.title }}
          {% if href == page.url %}
            <span class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-primary-700/0 via-primary-700/40 to-primary-700/0"></span>
          {% endif %}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>
