<header class="pointer-events-none relative z-50 flex flex-col">
  {% include announcement.liquid %}
  <div class="top-0 z-10 h-16 pt-6">
    <div class="sm:px-8">
      <div class="max-w-7xl mx-auto lg:px-8">
        <div class="relative px-4 sm:px-8 lg:px-12">
          <div class="max-w-2xl mx-auto lg:max-w-5xl">
            <div class="relative flex gap-4 justify-center">
              <div class="flex flex-1">
                {% unless page.hide_avatar %}
                  <div class="h-10 w-10 rounded-full bg-white/90 p-0.5 shadow-lg shadow-gray-800/5 ring-1 ring-gray-900/5 backdrop-blur">
                    <a href="{% link _pages/index.liquid %}" aria-label="Masilotti.com" title="Masilotti.com" class="block pointer-events-auto">
                      <img src="/assets/images/joe-small.jpg" alt="Joe Masilotti" class="rounded-full bg-gray-100 object-cover h-9 w-9">
                    </a>
                  </div>
                {% endunless %}
              </div>
              <div class="flex flex-1 justify-end md:justify-center">
                {% include navigation/mobile.liquid %}
                {% include navigation/desktop.liquid %}
              </div>
              <div class="flex justify-end md:flex-1">
                <div class="pointer-events-auto">
                  <a href="{% link feed.xml %}" title="RSS" aria-label="RSS" class="block group rounded-full bg-white/90 px-3.5 py-2.5 shadow-lg shadow-gray-800/5 ring-1 ring-gray-900/5 backdrop-blur">
                    {% svg assets/icons/mini/rss.svg class="h-5 w-5 text-gray-500 group-hover:text-gray-800" %}
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
