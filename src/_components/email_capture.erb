<%= content_tag "form",
  action: newsletter.action,
  method: "post",
  target: "popupwindow",
  onsubmit: "window.open('#{newsletter.onsubmit}', 'popupwindow')",
  class: "flex mt-6" do
%>
  <input type="email" id="bd-email" name="email" placeholder="Email address" aria-label="Email address" required autocomplete="email"
         class="min-w-0 max-w-xs flex-auto appearance-none rounded-md border border-zinc-900/10 bg-white px-3 py-[calc(theme(spacing.2)-1px)] shadow-md shadow-zinc-800/5 placeholder:text-zinc-400 focus:border-primary-600 focus:outline-none focus:ring-4 focus:ring-primary-600/10 sm:text-sm">

  <% if newsletter.tag.present? %>
    <%= tag "input", type: "hidden", name: "tag", value: newsletter.tag %>
  <% end %>

  <%= render UI::Button.new(title: cta, class_name: "ml-4 flex-none") %>
<% end %>
