<section id="pricing" class="mt-20 scroll-mt-12">
  <div class="max-w-5xl mx-auto px-4">
    <div class="mt-10 grid gap-6 md:grid-cols-2">
      {% for plan in site.data.bridge_components.pricing %}
        {% include bridge_components/pricing/card.liquid plan=plan %}
      {% endfor %}
    </div>
  </div>
</section>

<section id="free" class="mt-12">
  <div class="max-w-5xl mx-auto px-4">
    <div class="flex flex-col items-start gap-6 rounded-3xl p-8 ring-1 ring-gray-200 md:flex-row md:items-center md:justify-between">
      <div>
        <h3 class="text-base font-semibold text-gray-900">Free components</h3>
        <p class="mt-2 text-base text-gray-600">A collection of open-source bridge components to explore, test, and prototype with.</p>
      </div>
      <a href="{{ site.data.urls.bridge_components }}" class="inline-flex items-center gap-2 rounded-xl border border-gray-400 px-4 py-2 text-sm font-semibold text-gray-900 hover:bg-gray-900 hover:text-white">
        {% svg "/assets/icons/github.svg" class="h-5 w-5" %}
        <span>View on GitHub</span>
      </a>
    </div>
  </div>
</section>

{% if site.bridge_components.customers %}
  <section id="customers" class="mt-24 scroll-mt-12">
    <div class="mx-auto grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-12 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 sm:gap-y-14 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      {% for customer in site.data.bridge_components.customers %}
        <img class="grayscale col-span-2 max-h-12 w-full object-contain lg:col-span-1" src="/assets/images/bridge-components/customers/{{ customer.image }}" alt="{{ customer.name }}">
      {% endfor %}
    </div>
  </section>
{% endif %}

